{% set index = (numero  - 1) * 3 %}

<h1>{{questions[index].entitled}}</h1>

  <button class="answer {{ (questions[index].is_true) ? 'true-answer' : 'false-answer' }}">{{questions[index].content}}<img class="imgQ" src="{{ questions[index].url }}"/></button>

  <button class="answer {{ (questions[index + 1].is_true) ? 'true-answer' : 'false-answer' }}">{{questions[index + 1].content}}<img class="imgQ" src="{{ questions[index + 1].url }}"/></button>

  <button class="answer {{ (questions[index + 2].is_true) ? 'true-answer' : 'false-answer' }}">{{questions[index + 2].content}}<img class="imgQ" src="{{ questions[index + 2].url }}"/></button>

  <a id="next-question" href={{'/quiz?language=' ~ languageId  ~ '&level='  ~ levelId  ~ '&q=' ~ next}}>Question suivante</a>

